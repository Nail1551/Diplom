<UserControl x:Class="Diplom.Views.AddEditDevCar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Border CornerRadius="10"
                Background="#EEFFFFFF"
                BorderBrush="#FF6600"
                BorderThickness="2"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Button Content="✖"
                        Width="27" Height="25"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="Red"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-18,-15,0"
                        Command="{Binding CloseCommand}" />

                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Автомобиль" Margin="0,10,0,5"/>
                    <ComboBox ItemsSource="{Binding Cars}"
              DisplayMemberPath="LicensePlate"
              SelectedValuePath="CarID"
              SelectedValue="{Binding CarID}"
              Height="30"/>

                    <TextBlock Text="Сотрудник" Margin="0,15,0,5"/>
                    <ComboBox ItemsSource="{Binding Employees}"
                              DisplayMemberPath="FIO"
                              SelectedValuePath="EmployeeID"
                              SelectedValue="{Binding ToEmployeeID}"
                              Height="30"/>

                    <TextBlock Text="Дата выдачи" Margin="0,15,0,5"/>
                    <DatePicker SelectedDate="{Binding TransferDate}"
                                Height="30"/>

                    <TextBlock Text="Состояние автомобиля" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding Condition}" Height="30"/>

                    <TextBlock Text="Пробег (км)" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding Odometr}" Height="30"/>

                    <Button Content="Сохранить"
                            Command="{Binding SaveCommand}"
                            Background="#FF6600"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,20,0,0"
                            Height="35"
                            Width="150"
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
