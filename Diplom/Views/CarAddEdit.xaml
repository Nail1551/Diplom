<UserControl x:Class="Diplom.Views.CarAddEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diplom.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent" Margin="0,-141,0,0">
        <Border CornerRadius="10"
                Background="#EEFFFFFF"
                BorderBrush="#FF6600"
                BorderThickness="2"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="320"
                MinHeight="580">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" >

                <!-- Кнопка закрытия окна -->
                <Button Content="✖"
                        Width="30"
                        Height="30"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="Red"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        Command="{Binding CloseCommand}"/>

                <!-- Заголовок -->
                <TextBlock Text="Автомобиль"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"/>

                <!-- Марка -->
                <TextBlock Text="Марка:" FontWeight="Bold" Foreground="#333333"/>
                <TextBox Text="{Binding Brand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="26"
                         Background="#FFF8F6F4"
                         BorderBrush="#FF6600"
                         Foreground="#333333"
                         SelectionBrush="#FF6600"/>

                <!-- Модель -->
                <TextBlock Text="Модель:" FontWeight="Bold" Foreground="#333333"/>
                <TextBox Text="{Binding Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="26"
                         Background="#FFF8F6F4"
                         BorderBrush="#FF6600"
                         Foreground="#333333"
                         SelectionBrush="#FF6600"/>

                <!-- VIN -->
                <TextBlock Text="VIN:" FontWeight="Bold" Foreground="#333333"/>
                <TextBox Text="{Binding VIN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="26"
                         Background="#FFF8F6F4"
                         BorderBrush="#FF6600"
                         Foreground="#333333"
                         SelectionBrush="#FF6600"/>

                <!-- Гос. номер -->
                <TextBlock Text="Гос. номер:" FontWeight="Bold" Foreground="#333333"/>
                <TextBox Text="{Binding LicensePlate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="26"
                         Background="#FFF8F6F4"
                         BorderBrush="#FF6600"
                         Foreground="#333333"
                         SelectionBrush="#FF6600"/>

                <!-- Статус -->
                <TextBlock Text="Статус:" FontWeight="Bold" Foreground="#333333"/>
                <ComboBox ItemsSource="{Binding Statuses}"
                          SelectedItem="{Binding CarStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Height="26"
                          Background="#FFF8F6F4"
                          BorderBrush="#FF6600"
                          Foreground="#333333"/>

                <!-- Фотография -->
                <TextBlock Text="Фотография:" FontWeight="Bold" Foreground="#333333" Margin="0,10,0,0"/>
                <Border BorderBrush="#FF6600" BorderThickness="1" CornerRadius="5" Margin="0,5,0,5">
                    <Image Source="{Binding PhotoPath}" 
                           Width="200"
                           Height="120"
                           Stretch="Uniform"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>
                </Border>

                <!-- Кнопка выбрать фото -->
                <Button Content="Выбрать фото"
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Background="#FF6600"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding SelectPhotoCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF5500"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#E64F00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Кнопка сохранить -->
                <Button Content="Сохранить"
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Background="#FF6600"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding confirmCommand}"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
