<UserControl x:Class="Diplom.Views.CarAddEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diplom.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Border CornerRadius="10"
                Background="#EEFFFFFF"
                BorderBrush="#FF6600"   
                BorderThickness="2"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <!-- Кнопка закрытия окна -->
                <Button Content="✖"
                        Width="27" Height="25"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="Red"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-18,-15,0"
                        Command="{Binding CloseCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="15">
                                            <ContentPresenter 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D32F2F"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#B71C1C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Width="260" VerticalAlignment="Center" HorizontalAlignment="Center">

                    <!-- Заголовок окна -->
                    <TextBlock Text="Автомобиль"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"/>

                    <!-- Поле «Марка» -->
                    <StackPanel>
                        <TextBlock Text="Марка:" 
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding Brand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FFF8F6F4"
                                 BorderBrush="#FF6600"
                                 Foreground="#333333"
                                 SelectionBrush="#FF6600"
                                 Height="26"/>
                    </StackPanel>

                    <!-- Поле «Модель» -->
                    <StackPanel>
                        <TextBlock Text="Модель:"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FFF8F6F4"
                                 BorderBrush="#FF6600"
                                 Foreground="#333333"
                                 SelectionBrush="#FF6600"
                                 Height="26"/>
                    </StackPanel>

                    <!-- Поле «Vin» -->
                    <StackPanel>
                        <TextBlock Text="VIN:"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding VIN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FFF8F6F4"
                                 BorderBrush="#FF6600"
                                 Foreground="#333333"
                                 SelectionBrush="#FF6600"
                                 Height="26"/>
                    </StackPanel>

                    <!-- Поле «Гос.Номер» -->
                    <StackPanel>
                        <TextBlock Text="Гос. номер:"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding LicensePlate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FFF8F6F4"
                                 BorderBrush="#FF6600"
                                 Foreground="#333333"
                                 SelectionBrush="#FF6600"
                                 Height="26"/>
                    </StackPanel>

                    <!-- Поле «Статус» -->
                    <StackPanel>
                        <TextBlock Text="Статус:"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>

                        <ComboBox ItemsSource="{Binding Statuses}"
                                  SelectedItem="{Binding CarStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Background="#FFF8F6F4"
                                  BorderBrush="#FF6600"
                                  Foreground="#333333"
                                  Height="26">
                        </ComboBox>
                    </StackPanel>

                    <!-- Кнопка «Сохранить» -->
                    <Button Content="Сохранить"
                            Width="120"
                            Height="30"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            Background="#FF6600"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,10,0,0"
                            Command="{Binding confirmCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF5500"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#E64F00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
