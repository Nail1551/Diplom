<UserControl x:Class="Diplom.Views.CarListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Diplom.Converters"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтрация -->
        <StackPanel Orientation="Horizontal" Margin="20">
            <ComboBox Width="150" Margin="0,0,10,0"
                      ItemsSource="{Binding Statuses}"
                      SelectedItem="{Binding CurrentStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Очистить" Command="{Binding ClearFiltersCommand}" Width="80"/>
        </StackPanel>

        <!-- Список авто -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <ListView ItemsSource="{Binding FilteredCars}"
                      SelectedItem="{Binding CurrentCar, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Margin="5" Padding="10" Background="White">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding ImagePath}" Width="100" Height="60" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding LicensePlate}" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Brand}"/>
                                    <TextBlock Text="{Binding CarStatus}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="32,0,0,20">
            <Button Content="Добавить" Width="80" Margin="0,0,10,0" Command="{Binding addCommand}"/>
            <Button Content="Изменить" Width="80" Margin="0,0,10,0" Command="{Binding editCommand}"/>
            <Button Content="Удалить" Width="80" Command="{Binding deleteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
